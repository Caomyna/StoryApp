<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroduceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo2"
            android:background="@color/main"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text=" INTRODUCE"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_info"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StoryApp is a mobile application for reading stories, an application that provides readers with stories with attractive content and diverse genres from internet sources."
            android:textSize="17dp"
            android:paddingLeft="20dp"
            android:textColor="@color/gray2"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text=" THE DEVELOPER"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_developer"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cao My Na - 21GIT
Vietnam - Korea University of Information and Communication Technology"
            android:textSize="17dp"
            android:paddingLeft="20dp"
            android:textColor="@color/gray2"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

</FrameLayout>